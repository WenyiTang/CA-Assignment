        <h3> Hello, @nameOfUser </h3>
        <p><a href="#">My Purchases</a> | <a href="/Logout/Index">Logout</a></p>
    </div>
    <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="Index">
