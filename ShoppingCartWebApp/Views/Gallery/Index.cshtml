<div class="searchbar-div">
    <form action="/Gallery/Index" method="POST">
        <input onchange="search_product()" id="searchbar" class="searchbar-input" type="text" placeholder="Search" name="searchStr" />
        <input onclick="search_product()" type="submit" value="Submit" style="display:none;" />
    </form>
</div>

<div class="card-container">
    @{
        foreach (var product in products)
        {
            <div class="card">
                <img src="@product.imageUrl" alt="">

                <h3>@product.ProductName</h3>
                <p>@product.Description</p>

                <button id=@product.Id class="@product.ProductName add-to-cart" type="button" onclick=""><span>$@product.Price</span> - Add to cart</button>
            </div>
        }
    }
</div>

